try:
  tch = int(input("Enter total number of classes held: "))
  nca = int(input("Enter number of classes you ACTUALLY attended don't you dare lie: "))
except ValueError:
  print("Invalid input needs to be NUMERICAL NON DECIMAL")
if nca>tch:
  exit("How the fuck is your proxy more than the actuall classes")
else:
  print("Here you go...umm ")
per=nca/tch*100
print("Your attendance is "+ str(per)+"%")
if per>=75:
  print("ughhhh you got exams.... start studying bichhhh.")
else:
  print("Do you have medical cause")
  print("Type 'Y' if yes or 'N' if no")
  val=input()
  nval=val.lower()
  n=("n")
  y=("y")
  if nval==y or nval==n:
    print("authenticating..")
  else:
    print("Invalid Input should be only 'Y' or 'N'")
  if nval==y:
    print("ughhhh you got exams.... start studying bichhhh. why do you have to tell the truth. NOT COOL!")
  elif nval==n:
    print("yayyyyy no exam for you ENJOYYYYYYY")
